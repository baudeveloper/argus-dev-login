{
  "name": "awm",
  "version": "1.0.0",
  "description": "A few words about this awm application.",
  "author": "Baustein",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/baudeveloper/argus-dev-app"
  },
  "bugs": "https://github.com/baudeveloper/argus-dev-app/issues",
  "keywords": [
    "npm"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "f-make": "real-favicon generate faviconDescription.json faviconData.json dist/",
    "f-inject": "real-favicon inject faviconData.json dist dist/*.html",
    "f-update": "real-favicon check-for-update --fail-on-update faviconData.json",
    "m-dirs": "mkdirp dist/js/vendor -p && mkdirp dist/css/vendor -p && mkdirp dist/fonts -p",
    "v-css": "rimraf dist/css/vendor && copyfiles -f app/styles/*.css dist/css/vendor",
    "v-js": "rimraf dist/js/vendor && copyfiles -f app/scripts/*.js dist/js/vendor",
    "v-fonts": "rimraf dist/fonts && copyfiles -f node_modules/font-awesome/fonts/**/*.* dist/fonts && copyfiles -f app/fonts/**/*.* dist/fonts",
    "v-text": "rimraf dist/*.txt && copyfiles -f app/text/*.txt dist/",
    "scss": "node-sass --output-style compressed -o dist/css app/sass",
    "l-scss": "stylelint app/sass/**/*.scss --syntax scss || true",
    "a-scss": "postcss --no-map -u autoprefixer -r dist/css/*.css",
    "js": "mkdirp dist/js -p && babel app/js/custom.js -o dist/js/custom.js",
    "l-js": "eslint app/js/custom.js --fix || true",
    "u-js": "uglifyjs dist/js/custom.js -co dist/js/custom.js",
    "svgs": "svgo -f app/images/icons -o dist/images/icons",
    "ssg": "svg-sprite-generate -d app/images/icons -o dist/images/sprite.svg",
    "html": "pug --pretty app/pug/pages -o dist/",
    "b-html": "js-beautify -qrtf ./dist/*.html",
    "images": "imagemin app/images/* -o dist/images",
    "serve": "browser-sync start --server --serveStatic dist --files \"dist/css/*.css, dist/js/*.js, **/*.html, app/pug/pages/*.pug, dist/images/*.*, !node_modules\"",
    "copy": "run-s m-dirs v-css v-js v-fonts v-text",
    "pages": "run-s f-inject b-html",
    "styles": "run-s l-scss scss a-scss",
    "scripts": "run-s js l-js u-js",
    "all": "run-s clean copy f-make f-update html pages styles scripts svgs ssg images watch",
    "watch:css": "onchange \"app/sass\" -- run-s styles",
    "watch:js": "onchange \"app/js\" -- run-s scripts",
    "watch:html": "onchange \"app/pug/_includes\" \"app/pug/_layouts\" \"app/pug/_partials\" \"app/pug/pages\" -- run-s html pages",
    "watch:images": "onchange \"app/images\" -- run-s images svgs html pages",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s all"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.13.0",
    "cli-real-favicon": "0.0.6",
    "copyfiles": "^1.2.0",
    "eslint": "^3.18.0",
    "font-awesome": "^4.7.0",
    "imagemin-cli": "^3.0.0",
    "js-beautify": "^1.6.12",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^3.0.0",
    "pug": "^2.0.0-beta11",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "stylelint": "^7.9.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.7.2",
    "uglify-js": "^3.0.26",
    "yarn": "^1.3.2"
  }
}
